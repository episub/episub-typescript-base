{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "jsx": "preserve",
    "sourceMap": true,
    "outDir": "dist/tsc",
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": false,
    "experimentalDecorators": true
  },
  "files": ["webpack.config.ts"],
  "include": ["src/**/*"],
  "exclude": ["./node_modules", "./dist"]
}
